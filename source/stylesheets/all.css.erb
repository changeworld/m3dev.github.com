body {
    background-color: #F5F5DC;
    padding: 20px 0;
}

img {
    max-width: 100%;
}

h4 {
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
    padding: 20px 0;
    margin: 20px 0;
}

.content {
    padding: 10px 30px 20px 30px;
    background-color: #FFFFFF;
    border-radius: 15px;
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
}

.navbar {
    background-color: #FFFFFF;
}

.slides-speakerdeck {
    max-width: 425px;
}

/* GitHub repos and members */
.github-repos ul,
.github-members ul {
  padding-left: 0;
  margin: 1.5em 0;
}

.github-repo {
  background: #f5f5f5;
  display: inline-block;
  font-size: smaller;
  list-style-type: none;
  padding: 10px;
  margin-bottom: 0.5em;
  width: 48%;
}

.github-repo:nth-child(odd) {
  margin-right: 4%;
}

@media (max-width: 750px) {
  .github-repo {
    width: 100%;
  }

  .github-repo:nth-child(odd) {
    margin-right: 0;
  }
}

.github-repo a {
  color: #000;
  display: block;
  float: left;
  font-weight: bold;
  width: 80%;
}

.github-repo-meta {
  color: #999;
  display: block;
  float: right;
  text-align: right;
  width: 20%;
}

.github-repo-lang {
  color: #999;
  padding-left: 0.5em;
}

.github-member {
  display: inline-block;
  list-style-type: none;
  padding-right: 8px;
}

.github-member img {
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  transition: all 0.1s ease-in-out;
  -webkit-transition: all 0.1s ease-in-out;
  -moz-transition: all 0.1s ease-in-out;
}

.github-member img:hover {
  transfrom: scale(1.2, 1.2);
  -webkit-transform: scale(1.2, 1.2);
  -moz-transform: scale(1.2, 1.2);
}

